<h1 class="text-center text-white">Create new event</h1>
<div class="row d-flex justify-content-center">
  <div class="col-lg-4 d-flex justify-content-center align-items-center">
    <div class="card bg-dark text-white p-3">
      <form action="/events/create" method="post" enctype="multipart/form-data">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" id="name" class="form-control mb-3 bg-dark text-white">
        <label for="description" class="form-label">Description</label>
        <input type="text" name="description" id="description" class="form-control mb-3 bg-dark text-white">
        <label for="image" class="form-label">Image</label>
        <div class="custom-file mb-3">
          <input type="file" name="event-image" id="event-image" class="custom-file-input">
          <label class="btn btn-purple rounded-pill text-white" for="event-image">Choose File</label>
        </div>
        <!--<input type="file" name="event-image" class="form-control-file mb-3 bg-dark text-white">-->
        <input type="text" name="existingImage" hidden value="{{img}}">
        <br>
        <button type="submit" class="btn btn-primary align-self-center">Create Event</button>
      </form>
    </div>
  </div>
</div>