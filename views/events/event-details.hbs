<div class="container mt-5">
        <div class="card text-white bg-dark mb-3">
            <div class="card-body">
                <h1 class="card-title">{{event.name}}</h1>
                <p class="card-text">{{event.description}}</p>
                <img src="{{event.img}}" class="img-fluid" alt="{{event.name}}">
                <h3 class="mt-3">User: <span class="text-light">{{event.user.alias}}</span></h3>
                
                <div class="mt-4">
                    <form action="/events/{{event._id}}/delete" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger">Delete Event</button>
                    </form>
                    <a href="/events/edit/{{event._id}}" class="btn btn-warning ml-2">Modify Event</a>
                </div>
            </div>
        </div>
    </div>

