<div class="container mt-4">
    <div class="row align-items-stretch">
        <div class="col-lg-6 d-flex align-items-center">
            <div id="intro">
                <h1 class="text-white display-4">Welcome to Star Net</h1>
                <p class="text-white lead">A complete web app with Express and responsive design in which users can check & share astronomical events with their network using NASA API.</p>
            </div>
        </div>
        <div class="col-lg-6 d-flex align-items-stretch">
            <div id="carouselExampleIndicators" class="carousel slide w-100" style="height: 100%;" data-bs-ride="carousel">
                <div class="carousel-inner h-100">
                    <div class="carousel-item active">
                        <img src="/images/nasa-img/nasa1.jpg" class="d-block w-100 h-100" alt="Image 1">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/nasa-img/nasa2.jpg" class="d-block w-100 h-100" alt="Image 2">
                    </div>
                    <div class="carousel-item">
                        <img src="/images/nasa-img/nasa3.jpg" class="d-block w-100 h-100" alt="Image 3">
                    </div>
                </div>
                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
        </div>
    </div>
</div>

{{#if isAuthenticated}}
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Start your journey!</h5>
                    <p class="card-text">Explore various events and activities.</p>
                    <a href="/events/all-events" class="btn btn-lg btn-info">Explore Events</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create events!</h5>
                    <p class="card-text">Bring your ideas to life and create new events.</p>
                    <a href="/events/create" class="btn btn-lg btn-info">Create Event</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Check users</h5>
                    <p class="card-text">Discover and connect with other users.</p>
                    <a href="/users/users" class="btn btn-lg btn-info">Users</a>
                </div>
            </div>
        </div>
    </div>
</div>
<a class="btn btn-primary" href="users/profile">Profile</a>
<a class="btn btn-danger" href="auth/logout">Log Out</a>
{{else}}
<a class="btn btn-primary" href="auth/signup">Sign Up</a>
<a class="btn btn-primary" href="auth/login">Log In</a>
{{/if}}