<div id="login-form" class="row d-flex justify-content-center align-items-center" style="height: 100vh;">
  <div class="col-lg-4">
    <div class="card bg-dark text-white p-3">
<img src="/images/star-net-18-6-2024.png" alt="Logo" style="max-width: 300px; object-fit: contain; display: block; margin: 0 auto;">
      <h2 class="text-center mb-4">Log In</h2>
      <form action="/auth/login" method="POST" class="d-flex flex-column align-items-center">
        <label class="text-center">Email</label>
        <input type="email" name="email" class="form-control mb-3 text-center" placeholder="Your email" />

        <label class="text-center">Password</label>
        <input type="password" name="password" class="form-control mb-3 text-center" placeholder="Your password" />
        <br>
        <button type="submit" class="btn btn-primary">Log In</button>
        {{#if errorMessage}}
        <p class="error text-center mt-3">{{errorMessage}}</p>
        {{/if}}
        <p class="text-center mt-3">Don't have an account? <a href="/auth/signup">Sign up</a>.</p>
      </form>
    </div>
  </div>
</div>